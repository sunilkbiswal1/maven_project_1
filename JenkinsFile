pipeline {
  agent {
    docker {
      image 'maven:3.9.6-eclipse-temurin-17'
      args '-v /var/run/docker.sock:/var/run/docker.sock'      
    }
  }

  environment {
    SONAR_URL = "http://192.168.0.105:9000"
    DOCKER_IMAGE = "sunilkumar45/ultimate-cicd:${BUILD_NUMBER}"
    REGISTRY_CREDENTIALS = credentials('docker-cred')
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main',
            url: 'https://github.com/sunilkbiswal1/maven_project_1.git'
      }
    }

    stage('Build & Test') {
      steps {
        sh '''
          java -version
          mvn -version
          mvn clean package
        '''
      }
    }

    stage('Static Code Analysis') {
      steps {
        withCredentials([string(credentialsId: 'sonrqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh """
            mvn sonar:sonar \
            -Dsonar.login=${SONAR_AUTH_TOKEN} \
            -Dsonar.host.url=${SONAR_URL}
          """
        }
      }
    }

    stage('Docker Image Build & Push') {
      steps {
        script {
          sh "docker build -t ${DOCKER_IMAGE} ."
          docker.withRegistry('https://index.docker.io/v1/', 'docker-cred') {
            sh "docker push ${DOCKER_IMAGE}"
            sh "docker tag ${DOCKER_IMAGE} sunilkumar45/ultimate-cicd:latest"
            sh "docker push sunilkumar45/ultimate-cicd:latest"
          }
        }
      }
    }
  }

  post {
    always {
      sh 'docker logout || true'
      cleanWs()
    }
  }
}
