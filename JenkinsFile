pipeline {
  agent {
    docker {
      image 'maven:3.9.6-eclipse-temurin-17'
      args '-v /var/run/docker.sock:/var/run/docker.sock -u root'
    }
  }

  environment {
    SONAR_URL = "http://192.168.0.108:9000"
    DOCKER_IMAGE = "sunilkumar45/ultimate-cicd:${BUILD_NUMBER}"
    REGISTRY_CREDENTIALS = credentials('docker-cred')
    GIT_REPO_NAME = "maven_project_1"
    GIT_USER_NAME = "sunilkbiswal1"
  }

  stages {

    stage('Setup Docker') {
      steps {
        sh '''
          apt-get update
          apt-get install -y apt-transport-https ca-certificates curl gnupg lsb-release
          curl -fsSL https://download.docker.com/linux/debian/gpg | gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg
          echo "deb [arch=amd64 signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] https://download.docker.com/linux/debian bullseye stable" > /etc/apt/sources.list.d/docker.list
          apt-get update
          apt-get install -y docker-ce-cli
        '''
      }
    }

    stage('Checkout') {
      steps {
        git branch: 'main',
            url: 'https://github.com/sunilkbiswal1/maven_project_1.git'
      }
    }

    stage('Build & Test') {
      steps {
        sh '''
          java -version
          mvn -version
          mvn clean package
        '''
      }
    }

    stage('Static Code Analysis') {
      steps {
        withCredentials([string(credentialsId: 'sonrqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh """
            mvn sonar:sonar \
            -Dsonar.login=${SONAR_AUTH_TOKEN} \
            -Dsonar.host.url=${SONAR_URL}
          """
        }
      }
    }

    stage('Docker Image Build & Push') {
      steps {
        script {
          sh "docker build -t ${DOCKER_IMAGE} ."
          docker.withRegistry('https://index.docker.io/v1/', 'docker-cred') {
            sh "docker push ${DOCKER_IMAGE}"
            sh "docker tag ${DOCKER_IMAGE} sunilkumar45/ultimate-cicd:latest"
            sh "docker push sunilkumar45/ultimate-cicd:latest"
          }
        }
      }
    }

    stage('Update Deployment File') {
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            git config user.email "biswalpranati99@gmail.com"
            git config user.name "sunilkbiswal1"
            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" Deployment/deployment.yml
            git add Deployment/deployment.yml
            git commit -m "Update deployment image version ${BUILD_NUMBER}"
            git push https://${GITHUB_TOKEN}@github.com/${GIT_REPO_NAME} HEAD:main
          '''
        }
      }
    }

  }

  post {
   /* always {
      sh 'docker logout || true'
      cleanWs()
    } */
    success {
      echo 'Pipeline executed successfully'
    }
    failure {
      echo 'Pipeline failed'
    }
  }
}

